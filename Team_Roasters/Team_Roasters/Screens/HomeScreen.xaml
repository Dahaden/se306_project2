                                <ColumnDefinition Width="567.667" />
                                <ColumnDefinition Width="232.333" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="400" />
                                <RowDefinition Height="400" />
                            </Grid.RowDefinitions>

                            <s:SurfaceButton 
                         Name="what_we_do" 
                         Content="What We Do" 
                         Background="#FF8ECADC" FontSize="48"  Style="{DynamicResource HomeContentButton}" Grid.Row="0" Grid.Column="0" Click="What_we_do_Click" Margin="13.515,70.747,0,0" Height="329.253" VerticalAlignment="Top" FontFamily="Gill Sans MT" Foreground="Black" >
