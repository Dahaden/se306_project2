                                <s:SurfaceButton.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6"/>
                                </s:SurfaceButton.Effect>
                            </s:SurfaceButton>

                            <s:SurfaceButton 
                         Grid.RowSpan="1" 
                         Grid.ColumnSpan="1" 
                         Name="how_you_can_help" 
                         Content="How you can help" 
                         Background="#FFFBA5D6" FontSize="48"   Style="{DynamicResource HomeContentButton}" Grid.Row="0" Grid.Column="1" Height="329.253" Margin="0,70.747,-373.515,0" VerticalAlignment="Top" FontFamily="Gill Sans MT" Foreground="Black" >
                                <s:SurfaceButton.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6"/>
                                </s:SurfaceButton.Effect>
                            </s:SurfaceButton>

                            <s:SurfaceButton 
                         Grid.RowSpan="1" 
                         Grid.ColumnSpan="1" 

                         Name="family_and_support" 
                         Content="Family and Support"
                         Background="#FFFDC37D" FontSize="48" Style="{DynamicResource HomeContentButton}" Margin="13.515,0,0,69.754" Click="FamilyButton_Click" Grid.Row="1" Foreground="Black">
                                <s:SurfaceButton.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6"/>
                                </s:SurfaceButton.Effect>
                            </s:SurfaceButton>

                            <s:SurfaceButton 
                         Grid.RowSpan="1"
                         Grid.ColumnSpan="1"
                         Name="volunteers_and_corporate"
                         Content="Volunteers and &#xd;&#xa;corporate sponsors"
                         Background="#FFD7E583"  FontSize="48" Style="{DynamicResource HomeContentButton}"  Grid.Row="1" Grid.Column="1" Margin="0,0,-373.515,69.754" Foreground="Black" >
                                <s:SurfaceButton.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.6"/>
                                </s:SurfaceButton.Effect>
                            </s:SurfaceButton>
                        </Grid>
                        <!-- Video and information go here -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="400" />
                                <RowDefinition Height="400" />
                            </Grid.RowDefinitions>
                            <my:VideoPlayer Margin="78.122,58.19,68.722,-7.636" Source="Resources/intro-video.mp4" />

                        </Grid>

                        <!-- News, Upcoming events, twitter etc go here -->
                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="400" />
