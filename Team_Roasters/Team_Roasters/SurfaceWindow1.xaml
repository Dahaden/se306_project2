                            <Image.Effect>
                                <BlurEffect Radius="2"/>
                            </Image.Effect>
                        </Image>
                    </Grid>
                </Grid>

                <!-- Main Content goes here -->
                <s:SurfaceScrollViewer x:Name="MainContent" Grid.Row="2" HorizontalScrollBarVisibility="Visible">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1200" />
                            <ColumnDefinition Width="900" />
                            <ColumnDefinition Width="1350" />
                        </Grid.ColumnDefinitions>

