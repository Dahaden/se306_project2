<s:SurfaceWindow x:Class="Team_Roasters.Home_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="Team_Roasters" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="1080" d:DesignWidth="5000" SizeToContent="WidthAndHeight">
    <Grid Background="White" Width="1920" Height="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="863"/>
        </Grid.RowDefinitions>
        <!-- Top Menu / Title bar goes here -->
        <Grid Height="220" Margin="0,0,0,0">
            <Grid Name="ccf_grid" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Stretch="Uniform" Source="Resources/Fitout-S-child-cancer.jpg" Margin="100,10,10,10" HorizontalAlignment="Left" Width="331" Grid.Column="0" />
            </Grid>
        </Grid>
        
        <!-- Main Content goes here -->
        <s:SurfaceScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Visible">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="900" />
                    <ColumnDefinition Width="900" />
                    <ColumnDefinition Width="900" />
                </Grid.ColumnDefinitions>
                <!-- Buttons go here - what we do etc-->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400" />
                        <ColumnDefinition Width="400" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400" />
                        <RowDefinition Height="400" />
                    </Grid.RowDefinitions>
                    <Image Stretch="Uniform" Source="Resources/Fitout-S-child-cancer.jpg" HorizontalAlignment="Center" Width="331" Grid.Column="0" Grid.Row="0" />
                </Grid>
                
                <!-- Video and information go here -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400" />
                        <RowDefinition Height="400" />
                    </Grid.RowDefinitions>
                </Grid>
                
                <!-- News, Upcoming events, twitter etc go here -->
                <Image Stretch="Uniform" Source="Resources/Fitout-S-child-cancer.jpg" Margin="100,10,10,10" HorizontalAlignment="Left" Width="331" Grid.Column="2" />
            </Grid>
        </s:SurfaceScrollViewer>
    </Grid>    
</s:SurfaceWindow>