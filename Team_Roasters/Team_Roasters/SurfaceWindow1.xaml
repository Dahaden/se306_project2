                                <GridView>
                                    <GridViewColumn/>
                                </GridView>
                            </ListView.View>
                            <TextBox TextWrapping="Wrap" Text="Great video!"/>
                            <TextBox TextWrapping="Wrap" Text="Good video would watch again A++"/>
                            <TextBox TextWrapping="Wrap" Text="I love lamp"/>
                        </ListView>
